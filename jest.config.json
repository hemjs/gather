{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": ".",
  "testRegex": ".test.ts$",
  "verbose": true,
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "coverageDirectory": "./coverage",
  "collectCoverageFrom": ["src/**/*"],
  "testEnvironment": "node",
  "coverageProvider": "v8"
}
